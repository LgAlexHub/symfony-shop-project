{% extends 'admin/base.html.twig' %}

{% block title %} - Catégories{% endblock %}

{% block body %}
    <h1 class="text-center my-3 text-2xl font-san underline text-slate-800">Mes catégories</h1>
    <div class="container mx-auto w-screen mt-3 ml-3">
        <table class="table-fixed w-full border-separate border-spacing-2">
            <thead>
                <tr>
                    <td class="bg-slate-600 border border-slate-300 text-white px-2 py-1">
                        Nom
                    </td>
                    <td class="bg-slate-600 border border-slate-300 text-white px-2 py-1">
                        Nombre de produits dans la catégorie
                    </td>
                    <td class="bg-slate-600 border border-slate-300 px-2 py-1">

                    </td>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr class="even:bg-white odd:bg-blue-50">
                        <td class="border border-slate-300 px-2 w-1/6">{{category.label}}</td>
                        <td class="border border-slate-300 px-2 w-1/6 text-center">{{category.products|length}}</td>
                        <td class="w-1/6 space-x-8 py-3 px-3 bg-white text-center">
                            <a href="">
                                <i class="fa-solid fa-magnifying-glass text-blue-700 border border-blue-700 hover:text-white hover:border-transparent hover:bg-blue-700 rounded-md px-3 py-3"></i>
                            </a>
                            <a href="{{path('admin.categories.edit', {'id' : category.id})}}" class="w-fit">
                                <i class="fa-solid fa-pen-to-square border text-slate-800 border-slate-800 hover:text-white hover:border-transparent hover:bg-slate-800 rounded-md px-3 py-3"></i>
                            </a>
                            <a href="{{path('admin.categories.delete', {'id' : category.id})}}" class="w-fit">
                                <i class="fa-solid fa-circle-xmark border text-red-500 border-red-500 hover:text-white hover:border-transparent hover:bg-red-500 rounded-md px-3 py-3"></i>
                            </a>  
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
