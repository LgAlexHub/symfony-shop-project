{% extends 'admin/base.html.twig' %}
{% block title %} - {{form.vars.value.name}}{% endblock %}

{% block body %}
    <h1 class="text-center mt-10 text-2xl">Modifier un produit</h1>
    <hr class="mx-20 my-4">
    <div class="container mt-3 h-full flex items-center justify-center">
        {{ form_start(form, {attr: {'class' : 'space-y-9'}})}}
            {{ form_errors(form)}}
            {{form_row(form.name, {label : 'Nom du produit :', attr : {'class' : 'border rounded-sm border-slate-700 ml-3 px-2 px-3', 'placeholder' : 'Confiture de kiwi...'}})}}
            {{form_row(form.category, {label : 'Cat√©gorie :', attr : {'class' : 'border rounded-sm border-slate-700 ml-3 px-2 px-3'}})}}
            {{ form_row(form.submit, {label : "Modifier",attr: {'class':'w-full border border-sky-400 rounded-md bg-sky-400 px-2 py-1 text-white hover:bg-blue-800 hover:border-transparent'}})}}
        {{ form_end(form)}}
    </div>
{% endblock %}