            {{form_row(form.category, {label : 'Cat√©gorie :', attr : {'class' : 'border rounded-sm border-slate-700 ml-3 px-2 px-3'}})}}
            {{ form_row(form.submit, {attr: {'class':'w-full border border-lime-400 rounded-md bg-lime-400 px-2 py-1 text-white hover:bg-lime-800 hover:border-transparent'}})}}
        {{ form_end(form)}}
    </div>
{% endblock %}