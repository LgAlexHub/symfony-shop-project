{% extends 'admin/base.html.twig' %}

{% block title %} - Commandes{% endblock %}

{% block body %}
    <h1 class="text-center my-3 text-2xl font-san underline text-slatea-800">Mes commandes</h1>

    <div class="container mx-auto mt-3 ml-3">
        <table class="table-fixed w-full border-separate border-spacing-2">
            <thead>
                <tr>
                    <td class="bg-slate-600 border border-slate-300 text-white px-2 py-1">
                        Prénom
                    </td>
                    <td class="bg-slate-600 text-white border border-slate-300 px-2 py-1">
                        Nom
                    </td>
                    <td class="bg-slate-600 text-white border border-slate-300 px-2 py-1">
                        Email
                    </td>
                    <td class="bg-slate-600 text-white border border-slate-300 px-2 py-1">
                        Nombre de produits
                    </td>
                    <td class="bg-slate-600 text-white border border-slate-300 px-2 py-1">
                        Date de la commande
                    </td>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr class="even:bg-white odd:bg-blue-50">
                        <td class="border border-slate-300 px-2 w-1/6">{{order.clientFirstName}}</td>
                        <td class="border border-slate-300 px-2 w-1/6">{{order.clientLastName}}</td>
                        <td class="border border-slate-300 px-2 w-1/6">{{order.email}}</td>
                        <td class="border border-slate-300 text-center text-blue-800 w-2/6 border border-slate-300">
                            <a href="" class="hover:underline">
                                <span class="rounded-full px-2 border border-purple-400 bg-purple-400 text-white">
                                    {{order.items|length}}
                                </span>
                            </a>
                        </td>
                        <td class="border border-slate-300 px-2 w-1/6">{{order.createdAt|date("d/m/Y à H:i")}}</td>
                        {# <td class="w-1/6 space-x-8 py-3 px-3 bg-white text-center">
